<h2>Available drones</h2>

<div>

    <a href="/drones/create">
    <button>Add New Dron</button>
    </a>

{{#each this.allDrones}}

    <h3>{{this.name}}</h3>
    <p>Propellers: {{this.propellers}}</p>
    <p>Velocidad: {{this.maxSpeed}}</p>

    <a href="/drones/{{this._id}}/edit">
    <button>Modificalo</button>
    </a>
    <br>
    <form action="/drones/{{this._id}}/delete" method="post">
    <button>Delete</button>
    </form>

{{/each}}

</div>
